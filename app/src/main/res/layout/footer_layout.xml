<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="13"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/footer_generate_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate OTP"
        android:textSize="12sp"
        android:textStyle="bold"
        android:onClick="generateOTP"
        android:layout_alignBaseline="@+id/footer_register_otp"
        android:layout_alignBottom="@+id/footer_register_otp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/generate_otp_margin_left"
        android:layout_marginStart="@dimen/generate_otp_margin_left"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/footer_register_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify OTP"
        android:textSize="12sp"
        android:textStyle="bold"
        android:onClick="registerOTP"
        android:layout_marginRight="@dimen/verify_otp_margin_right"
        android:layout_marginEnd="@dimen/verify_otp_margin_right"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_marginRight="@dimen/home_margin_right"
        android:layout_marginEnd="@dimen/home_margin_right"
        android:onClick="goHome"
        android:background="@drawable/button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>
