<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/footer_generate_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate OTP"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:background ="@drawable/button"
        android:onClick="generateOTP"/>

    <Button
        android:id="@+id/footer_register_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify OTP"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/footer_generate_otp"
        android:layout_alignBottom="@+id/footer_generate_otp"
        android:layout_toRightOf="@+id/footer_generate_otp"
        android:layout_toEndOf="@+id/footer_generate_otp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:background ="@drawable/button"
        android:onClick="registerOTP"
        />

    <Button
        android:id="@+id/footer_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/footer_register_otp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/footer_register_otp"
        android:layout_toRightOf="@+id/footer_register_otp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background ="@drawable/button"
        android:text="Log Out"
        android:onClick="logOut"/>
</RelativeLayout>
